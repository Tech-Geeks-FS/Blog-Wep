<%- include("partials/header") -%>
<div class="container p-4 my-5">
<div class="container p-4">
    <center>
        <a id="askQuestion" href="/ask_question">Ask Question</a>
</center>
    
</div>


<div class="container">

    
        <% questions.forEach(function(question) { %> 
            <a href="/<%= question.title %>">
                <div class="bg question p-3">
                    <div class="row">
                        <div class="col">
                            <h5><%= question.title %> </h5>
                        </div>
                        
                        <div class="col text-right">
                        <div class="d dropdown">
                          <button class="btn btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v"></i>
                          </button>
                          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <form action="/questions/report" method="post">
                              <button type="submit" name="reportId" value="<%= question._id %>" class="dropdown-item">Report</button>
                            </form>
                          </div>
                          </div>
                      </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">
                            <p><%= question.description.substring(0, 140)+ " ..."%></p>
                        </div>
                        <div class="col">
                            <p class="hoverQuestion">Answer</p>
                        </div>
                        
                    </div>
               </div>
           </a>    
         <% }); %>  
    
    

</div>
</div>


<%- include("partials/footer") -%>


